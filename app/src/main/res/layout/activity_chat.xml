<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    >
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/chatbg"
    android:scaleType="matrix"
    />


    <TextView
        android:id="@+id/textchatbodyid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_above="@+id/chatdittxtid"
        android:background="@drawable/customstyletwo"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:padding="8dp"
        android:textColor="#d2ffffff"
        android:text="oldmsgs bla bla"
        android:gravity="bottom"
        />

    <EditText

        android:id="@+id/chatdittxtid"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="116dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittextstyle"
        android:hint="Speak your mind beautiful"
        android:padding="8dp" />
    <Button
        android:id="@+id/sendbtnid"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/customstyle"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="#f5c2c2"
        android:onClick="sendmessage"
        android:text="SEND"
        />



</RelativeLayout>