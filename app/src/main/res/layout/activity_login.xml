<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regbg"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/logintextlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="LOG IN"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#a9000000"
        android:layout_marginTop="40dp"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/emailtextlog"
        android:background="@drawable/edittextstyle"
        android:layout_width="match_parent"
        android:layout_below="@id/logintextlog"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:padding="6dp"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/pwtextlog"
        android:background="@drawable/edittextstyle"
        android:layout_width="match_parent"
        android:layout_below="@id/emailtextlog"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:padding="6dp"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginbtnlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwtextlog"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="LOG IN" />

    <Button
        android:id="@+id/signupbtnlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginbtnlog"
        android:layout_marginRight="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="20dp"
        android:text="sign up" />

    <Button
        android:id="@+id/vipbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupbtnlog"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"

        android:text="VIP LOG IN" />

</RelativeLayout>